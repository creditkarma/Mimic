{
  "name": "Mimic",
  "description": "Service Impersonator for the future",
  "author": "Credit Karma Inc.",
  "contributors": [
    "Volodymyr Ladnik"
  ],
  "version": "2.0.3",
  "license": "Apache-2.0",
  "repository": "github:creditkarma/Mimic",
  "private": true,
  "scripts": {
    "lerna": "lerna bootstrap && lerna run build",
    "lerna:publish": "lerna exec -- npm publish --access public",
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:all": "yarn compile && electron-builder -mlw",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "commit": "npx git-cz"
  },
  "dependencies": {
    "@creditkarma/mimic-cli": "2.0.3",
    "@creditkarma/mimic-core": "2.0.3",
    "@creditkarma/mimic-graphql": "2.0.3",
    "@creditkarma/mimic-rest": "2.0.3",
    "@creditkarma/mimic-thrift": "2.0.3",
    "electron-log": "^2.2.17",
    "electron-updater": "^3.0.3",
    "source-map-support": "^0.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/config-lerna-scopes": "^7.2.1",
    "@types/jest": "^23.1.3",
    "@types/react": "^16.0.35",
    "@types/react-dom": "^16.0.3",
    "@types/react-redux": "^6.0.5",
    "@types/react-router-dom": "^4.2.3",
    "@types/react-virtualized": "^9.18.7",
    "@types/semver": "^5.5.0",
    "antd": "^3.1.4",
    "cz-conventional-changelog": "^2.1.0",
    "electron": "^3.0.5",
    "electron-builder": "^20.28.4",
    "electron-devtools-installer": "^2.2.4",
    "electron-webpack": "2.2.1",
    "electron-webpack-ts": "^2.0.2",
    "husky": "^1.1.2",
    "jest": "^23.2.0",
    "jest-junit": "^5.2.0",
    "lerna": "^3.0.0-rc.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-virtualized": "^9.20.1",
    "redux": "^3.7.2",
    "ts-import-plugin": "^1.4.3",
    "ts-jest": "^23.0.1",
    "tsconfig-paths": "^3.1.3",
    "typescript": "^3.0.1",
    "webpack": "^4.16.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "testURL": "http://localhost/",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/dist/**"
    ],
    "roots": [
      "<rootDir>/src",
      "<rootDir>/packages"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "webpack.renderer.additions.js"
    }
  },
  "build": {
    "publish": {
      "provider": "github"
    },
    "appId": "com.creditkarma.mimic",
    "productName": "Mimic",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
