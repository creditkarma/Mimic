{
  "name": "Mimic",
  "description": "Service Impersonator for the future",
  "author": "Credit Karma Inc.",
  "contributors": [
    "Volodymyr Ladnik"
  ],
  "version": "2.2.1",
  "license": "Apache-2.0",
  "repository": "github:creditkarma/Mimic",
  "private": true,
  "scripts": {
    "lerna": "lerna bootstrap && lerna run build",
    "lerna:publish": "lerna exec -- npm publish --access public",
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:all": "yarn compile && electron-builder -mlw",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "test": "jest",
    "test:ci": "jest --ci --coverage  --reporters='default' --reporters='jest-junit'",
    "commit": "npx git-cz",
    "release:body": "node ./scripts/release_body.js"
  },
  "dependencies": {
    "@creditkarma/mimic-cli": "2.2.1",
    "@creditkarma/mimic-core": "2.2.1",
    "@creditkarma/mimic-graphql": "2.2.1",
    "@creditkarma/mimic-rest": "2.2.1",
    "@creditkarma/mimic-thrift": "2.2.1",
    "electron-log": "^3.0.4",
    "electron-updater": "^4.0.6",
    "source-map-support": "^0.5.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/config-lerna-scopes": "^7.5.1",
    "@types/jest": "^24.0.11",
    "@types/prismjs": "^1.16.0",
    "@types/react": "^16.0.35",
    "@types/react-dom": "^16.8.3",
    "@types/react-redux": "^7.0.5",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-test-renderer": "^16.8.1",
    "@types/react-virtualized": "^9.21.0",
    "@types/semver": "^5.5.0",
    "antd": "^3.15.2",
    "cz-conventional-changelog": "^2.1.0",
    "electron": "^11.5.0",
    "electron-builder": "^20.39.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-webpack": "2.6.2",
    "electron-webpack-ts": "^3.1.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jest-junit": "^6.3.0",
    "lerna": "^3.13.1",
    "prismjs": "^1.16.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^6.0.1",
    "react-router-dom": "^5.0.0",
    "react-simple-code-editor": "0.9.7",
    "react-test-renderer": "^16.8.6",
    "react-virtualized": "^9.21.0",
    "redux": "^4.0.1",
    "request": "^2.88.0",
    "ts-import-plugin": "^1.5.5",
    "ts-jest": "^24.0.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.3.4000",
    "webpack": "^4.29.6"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "testURL": "http://localhost/",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/dist/**"
    ],
    "roots": [
      "<rootDir>/src",
      "<rootDir>/packages"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "reporters": [
      "default"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/src/__mocks__/styleMock.js"
    }
  },
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "webpack.renderer.additions.js"
    }
  },
  "build": {
    "publish": {
      "provider": "github"
    },
    "appId": "com.creditkarma.mimic",
    "productName": "Mimic",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
